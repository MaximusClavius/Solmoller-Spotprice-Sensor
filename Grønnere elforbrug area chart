type: custom:apexcharts-card
apex_config:
  chart:
    height: 400px
graph_span: 7d
span:
  start: day
now:
  show: true
  label: Nu
header:
  title: Grønnere elforbrugs prognose på spotpriser (kr/kWh)
  show: true
experimental:
  color_threshold: true
series:
  - entity: sensor.gronnere_elforbrug_spotpris_dk1
    type: area
    opacity: 0.7
    stroke_width: 2
    data_generator: |
      var data = entity.attributes.DK1.map((start, index) => {
        return [new Date(start["Time"]).getTime() + 2 * 60 * 60 * 1000, entity.attributes.DK1[index]["Price"] / 1000 * 7.44 * 1.25];
      });
      return data;
    color_threshold:
      - value: 0
        color: green
      - value: 3
        color: yellow
      - value: 4
        color: orange
      - value: 5
        color: red
